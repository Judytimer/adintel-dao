{
  "name": "adintel-dao",
  "version": "1.0.0",
  "description": "Decentralized Ad Intelligence Network - Chrome users earn rewards for contributing ad insights while businesses get affordable competitive analysis",
  "main": "dist/background.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "dev": "concurrently \"npm run dev:extension\" \"npm run dev:backend\"",
    "dev:extension": "webpack --mode development --watch",
    "dev:backend": "cd src/backend && python -m uvicorn main:app --reload",
    "build": "npm run typecheck && webpack --mode production",
    "build:extension": "npm run build && npm run package:extension",
    "package:extension": "web-ext build --source-dir=dist --artifacts-dir=releases",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.{ts,json,css,html}\"",
    "clean": "rimraf dist releases coverage",
    "setup": "npm install && pip install -r src/backend/requirements.txt",
    "security:check": "npm audit && npm run lint",
    "security:fix": "npm audit fix && npm run lint:fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Judytimer/adintel-dao.git"
  },
  "keywords": [
    "chrome-extension",
    "advertising",
    "competitive-intelligence",
    "blockchain",
    "vana",
    "data-dao",
    "web3",
    "privacy"
  ],
  "author": "Judy Timer <yj821973181@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Judytimer/adintel-dao/issues"
  },
  "homepage": "https://github.com/Judytimer/adintel-dao#readme",
  "devDependencies": {
    "@types/chrome": "^0.0.260",
    "@types/dompurify": "^3.0.5",
    "@types/jest": "^29.5.10",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "concurrently": "^8.2.2",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "style-loader": "^3.3.3",
    "terser-webpack-plugin": "^5.3.9",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "typescript": "5.3.2",
    "web-ext": "^8.8.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "chart.js": "4.4.0",
    "dompurify": "^3.2.6"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": {
    "production": [
      "chrome >= 88"
    ],
    "development": [
      "chrome >= 88"
    ]
  }
}
