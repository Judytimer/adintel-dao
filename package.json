{
  "name": "adintel-dao",
  "version": "1.0.0",
  "description": "Decentralized Ad Intelligence Network - Chrome users earn rewards for contributing ad insights while businesses get affordable competitive analysis",
  "main": "src/extension/background.js",
  "scripts": {
    "test": "jest",
    "dev": "concurrently \"npm run dev:extension\" \"npm run dev:backend\"",
    "dev:extension": "webpack --mode development --watch",
    "dev:backend": "cd src/backend && python -m uvicorn main:app --reload",
    "build": "webpack --mode production",
    "build:extension": "npm run build && npm run package:extension",
    "package:extension": "web-ext build --source-dir=dist --artifacts-dir=releases",
    "lint": "eslint src/extension/**/*.js",
    "lint:fix": "eslint src/extension/**/*.js --fix",
    "format": "prettier --write \"src/**/*.{js,json,css,html}\"",
    "clean": "rimraf dist releases",
    "setup": "npm install && pip install -r src/backend/requirements.txt"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adintel-dao/adintel-dao.git"
  },
  "keywords": [
    "chrome-extension",
    "advertising",
    "competitive-intelligence", 
    "blockchain",
    "vana",
    "data-dao",
    "web3",
    "privacy"
  ],
  "author": "Shuang Jin <shuang@adintel-dao.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/adintel-dao/adintel-dao/issues"
  },
  "homepage": "https://github.com/adintel-dao/adintel-dao#readme",
  "devDependencies": {
    "@types/chrome": "^0.0.246",
    "concurrently": "^8.2.2",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "web-ext": "^7.8.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "chart.js": "^4.4.0",
    "dompurify": "^3.0.5"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": {
    "production": [
      "chrome >= 88"
    ],
    "development": [
      "chrome >= 88"
    ]
  }
} 